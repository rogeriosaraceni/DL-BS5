---
import BtnLightDarkMode from './_btnLightDarkMode.astro';
import DropdownLanguage from './_dropdown-language.astro';
import DropdownUser from './_dropdown-user.astro';
---

<nav class="navbarApp navbarAppSidebar navbar navbar-expand-md shadow">
    <section class="container-fluid">
        <div class="d-flex align-items-center gap-3">
            <span class="btnToogleSidebar" data-btn="toggleSidebar">
                <i class="hamburger align-self-center"></i>
            </span>
        </div>

        <ul class="navbar-nav align-items-center ps-2 flex-row flex-column-xl">
            <li class="nav-item dropdown">
                <DropdownLanguage />
            </li>

            <li class="nav-item">
                <BtnLightDarkMode />
            </li>

            <li class="nav-item dropdown">
                <DropdownUser />
            </li>
        </ul>
    </section>
</nav>

<style>
    .navbarAppSidebar {
        z-index: 999;
        position: sticky;
        top: 0;
        padding: 0;
        border-bottom: 0;
    }

    .btnToogleSidebar {
        position: relative;
        margin-right: 1rem;
        cursor: pointer;
        display: flex;
        height: 26px;
        width: 24px;
        border-radius: 0.25rem;
    }

    .btnToogleSidebar .hamburger {
        position: relative;
        transition: 0.3s;
    }
    .btnToogleSidebar .hamburger,
    .btnToogleSidebar .hamburger:after,
    .btnToogleSidebar .hamburger:before {
        content: '';
        display: block;
        border-radius: 0.25rem;
        width: 100%;
        height: 3px;
        background: var(--bs-body-color);
        transition:
            background 0.1s ease-in-out,
            color 0.1s ease-in-out;
    }
    .btnToogleSidebar .hamburger:before {
        position: absolute;
        top: -8px;
        width: 80%;
    }
    .btnToogleSidebar .hamburger:after {
        position: absolute;
        bottom: -8px;
        width: 60%;
    }

    .btnToogleSidebar:hover .hamburger,
    .btnToogleSidebar:hover .hamburger:after,
    .btnToogleSidebar:hover .hamburger::before {
        background: orange;
    }
</style>
