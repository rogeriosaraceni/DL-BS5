---
import BtnLightDarkMode from '@components/BtnLightDarkMode.astro';
---

<nav
    class="navbar navbarApp navbar-expand-xl fixed-top shadow rounded-4 my-2 py-0 mx-4 bg-shadow-opacity blur"
    data-el="fixedTop"
>
    <section class="container-fluid">
        <div class="d-flex align-items-center gap-3">
            <button
                id="btnNavbarSideCollapse"
                class="navbar-toggler"
                type="button"
                data-bs-toggle="collapse"
                data-bs-target="#navbarApp"
                aria-controls="navbarApp"
                aria-expanded="false"
                aria-label="Toggle navigation"
            >
                <span class="navbar-toggler-icon"></span>
            </button>

            <!-- Logo -->
            <a class="navbar-brand" href="/">
                <div class="wrapper-logo">
                    <div class="content-logo-ano">Logo</div>
                </div>
            </a>
        </div>

        <div class="navbar-collapse offcanvas-collapse h-100" id="navbarApp">
            <ul class="navbar-nav ms-auto gap-1">
                <!-- Home -->
                <li class="nav-item">
                    <a class="nav-link" href="/"> Home </a>
                </li>

                <!-- Setup -->

                <li class="nav-item dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown" aria-expanded="false">
                        Setup
                    </a>

                    <ul class="dropdown-menu dropdown-menu-end overflow-hidden border-0 py-0 shadow-sm">
                        <li class="nav-item">
                            <a class="nav-link text-nowrap" href="/setup">Teste</a>
                        </li>
                    </ul>
                </li>
            </ul>
        </div>

        <ul class="navbar-nav align-items-center ps-2 flex-row flex-column-xl">
            <!-- Book -->
            <li class="nav-item">
                <a
                    class="nav-link px-sm-2 px-1"
                    data-bs-toggle="tooltip"
                    data-bs-placement="left"
                    data-bs-title="Manual 2025"
                    href="#"
                >
                    <i class="bi bi-bookmark fs-4"></i>
                </a>
            </li>

            <!-- translate -->
            <li class="nav-item dropdown">
                <a
                    class="d-flex align-items-center nav-link px-sm-2 px-1 dropdown-toggle"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                >
                    <i class="bi bi-translate fs-4" data-bs-toggle="tooltip" data-bs-title="Tradução"></i>
                </a>

                <ul class="dropdown-menu dropdown-menu-end overflow-hidden position-absolute border-0 py-0 shadow-sm">
                    <label class="dropdown-item p-2 mb-0" role="button">
                        <input type="radio" name="language" value="7" hidden checked />
                        <div class="d-flex align-items-center small">
                            <i class="bi bi-globe fs-5"></i>
                            <span class="ms-2 text-sm"> Português Brasil </span>
                        </div>
                    </label>

                    <label class="dropdown-item p-2 mb-0" role="button">
                        <input type="radio" name="language" value="9" hidden />
                        <div class="d-flex align-items-center small">
                            <i class="bi bi-globe fs-5"></i>
                            <span class="ms-2 text-sm"> Espanhol </span>
                        </div>
                    </label>
                </ul>
            </li>

            <li class="nav-item">
                <BtnLightDarkMode />
            </li>

            <!-- perfil -->
            <li class="nav-item dropdown">
                <a
                    class="d-flex align-items-center nav-link px-sm-2 px-1 dropdown-toggle"
                    role="button"
                    data-bs-toggle="dropdown"
                    aria-expanded="false"
                >
                    <i class="bi bi-person-circle fs-4"></i>

                    <div class="d-flex flex-column ms-1 info-user-desktop">
                        <small class="lh-1" id="user-name">Maycon Felix</small>
                        <small class="lh-1" id="user-email">maycon@dlfelix.com</small>
                        <small class="lh-1" id="user-cargo">Administrador</small>
                    </div>
                </a>

                <ul class="dropdown-menu dropdown-menu-end overflow-hidden position-absolute border-0 py-0 shadow-sm">
                    <li class="border-bottom info-user-mobile">
                        <div class="d-flex align-items-center small p-2">
                            <i class="bi bi-person-circle"></i>

                            <div class="d-flex flex-column ms-2">
                                <small class="lh-1" id="user-name">Maycon Felix</small>
                                <small class="lh-1" id="user-email">maycon@dlfelix.com</small>
                                <small class="lh-1" id="user-cargo">Administrador</small>
                            </div>
                        </div>
                    </li>

                    <li>
                        <a
                            class="dropdown-item p-2"
                            data-fancybox
                            data-type="iframe"
                            data-width="500"
                            data-height="710"
                            href="/pages/perfil/index.asp"
                        >
                            <div class="d-flex align-items-center small">
                                <i class="bi bi-person-fill-gear fs-5"></i>
                                <span class="ms-2 text-sm"> Perfil </span>
                            </div>
                        </a>
                    </li>

                    <li>
                        <a class="dropdown-item p-2" href="/util/logoff.asp">
                            <div class="d-flex align-items-center small">
                                <i class="bi bi-box-arrow-right fs-5"></i>
                                <span class="ms-2 text-sm"> Sair </span>
                            </div>
                        </a>
                    </li>
                </ul>
            </li>
        </ul>
    </section>
</nav>

<style>
    .navbarApp .nav-item.active > .nav-link {
        background-color: var(--bs-secondary);
    }
</style>
