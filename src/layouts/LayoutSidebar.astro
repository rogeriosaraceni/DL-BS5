---
import Footer from '@includes/Footer.astro';
import Head from '@includes/Head.astro';
import Nav from '@includes/Nav/nav.astro';
import Sidebar from '@includes/Sidebar.astro';
---

<!doctype html>
<html lang="pt-BR" data-bs-theme="light">
    <head>
        <Head />
    </head>

    <body>
        <div id="wrapperApp">
            <Sidebar />

            <section class="mainContentApp contentRightApp">
                <Nav />

                <main class="main-app">
                    <div class="container-fluid">
                        <slot />
                    </div>
                </main>

                <Footer />
            </section>
        </div>
    </body>
</html>

<style is:global>
    #wrapperApp {
        align-items: stretch;
        display: flex;
        width: 100%;
    }

    .mainContentApp {
        display: flex;
        flex-direction: column;
        width: 100%;
        height: 100vh;
        transition: all 0.3s;
    }

    .main-app {
        flex: 1;
        padding: 1.5rem 1rem;
    }

    .footer-app {
        padding: 1rem 1rem;
        font-size: 0.875em;
        color: var(--bs-secondary-color);
        border-top: 1px solid var(--bs-border-color);
    }
</style>
